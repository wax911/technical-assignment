<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.FontFamily" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.App.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/Theme.App.ToolbarTitleAppearance</item>
    </style>

    <style name="Theme.App.ToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.App.PopupTheme" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:popupElevation">@dimen/lg_margin</item>
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="Theme.App.WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>